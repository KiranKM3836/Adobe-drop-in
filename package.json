{
  "name": "@kiran3836/product-badge-dropin",
  "version": "0.1.1",
  "description": "Custom Product Badge Drop-in for Adobe Storefront",
  "author": "Kiran",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": "^20.0.0 || ^22.0.0"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./*": "./dist/*"
  },
  "scripts": {
    "dev": "concurrently 'npm run storybook' 'npm run serve'",
    "storybook": "elsie storybook",
    "serve": "concurrently 'elsie serve' 'wait-on tcp:${PORT:=3002} && alive-server ./examples/html-host --port=3000 --watch=../../dist/reload'",
    "lint": "elsie lint --max-warnings=0",
    "test": "elsie test",
    "build": "elsie build",
    "analyze": "ANALYZE=true elsie build"
  },
  "dependencies": {
    "@adobe-commerce/elsie": "^1.4.1",
    "@adobe-commerce/event-bus": "~1.0.0",
    "@adobe-commerce/fetch-graphql": "~1.0.1",
    "@adobe-commerce/storefront-design": "~1.0.0",
    "@dropins/build-tools": "~1.0.1",
    "preact": "~10.22.1"
  },
  "devDependencies": {
    "alive-server": "^1.3.0",
    "concurrently": "^9.2.0",
    "jest": "^30.0.3",
    "wait-on": "^8.0.3"
  }
}
